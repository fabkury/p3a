menu "P3A Board Configuration (EP44B)"

    config P3A_BOARD_EP44B
        bool
        default y
        help
            This board is the Waveshare ESP32-P4-WIFI6-Touch-LCD-4B.
            720x720 pixel display with MIPI-DSI interface.

    choice P3A_PIXEL_FORMAT
        prompt "Display pixel format"
        default P3A_PIXEL_FORMAT_RGB888

        config P3A_PIXEL_FORMAT_RGB888
            bool "RGB888 (24-bit)"
            select BSP_LCD_COLOR_FORMAT_RGB888
            
        config P3A_PIXEL_FORMAT_RGB565
            bool "RGB565 (16-bit)"
            select BSP_LCD_COLOR_FORMAT_RGB565
    endchoice

    config P3A_DISPLAY_BUFFER_COUNT
        int "Number of display buffers"
        default 2
        range 1 3
        help
            Number of framebuffers for display. 2 enables double-buffering.

    # ============ BOARD CAPABILITIES ============
    # These define what hardware features are available

    config P3A_HAS_TOUCH
        bool "Board has touch screen"
        default y
        help
            EP44B has a GT911 capacitive touch controller.

    config P3A_HAS_BRIGHTNESS_CONTROL
        bool "Board has brightness control"
        default y
        help
            EP44B supports PWM backlight brightness control.

    config P3A_HAS_WIFI
        bool "Board has WiFi"
        default y
        help
            EP44B has WiFi via ESP32-C6 coprocessor.

    config P3A_HAS_USB
        bool "Board has USB port"
        default y
        help
            EP44B has USB-C port for mass storage and PICO-8 streaming.

    config P3A_HAS_SDCARD
        bool "Board has SD card slot"
        default y
        help
            EP44B has microSD card slot for animation storage.

    config P3A_HAS_BUTTONS
        bool "Board has physical buttons"
        default n
        help
            EP44B does not have physical buttons.

endmenu

